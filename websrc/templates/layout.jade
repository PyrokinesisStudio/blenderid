			})(window,document,'script','//www.google-analytics.com/analytics.js','ga');
			ga('create', '{{config.GOOGLE_ANALYTICS_TRACKING_ID}}', '{{config.GOOGLE_ANALYTICS_DOMAIN}}');
			ga('require', 'displayfeatures');
			ga('send', 'pageview');
