| {% extends 'layout.html' %}
| {% load i18n %}
| {% block page_title %}Your Password -- Blender ID{% endblock %}
| {% block body %}
.container
	.row.profile
		.box.col-md-6.col-md-push-2
			i.backicon.fa.fa-lock
			h1 Change Your Password
			h3 Because change is good

			form.margin-top-5(action='', method='POST')
				| {% csrf_token %}
				| {% if form.errors %}
				p.errornote
					| {% if form.errors.items|length == 1 %}{% trans "Please correct the error below." %}{% else %}{% trans "Please correct the errors below." %}{% endif %}
				| {% endif %}

				p {% trans "Please enter your old password, for security's sake, and then enter your new password twice so we can verify you typed it in correctly." %}
				fieldset
					.input-group.input-group-lg.width-full
						span.input-group-addon
							i.fa.fa-lock
						| {{ form.old_password }}
						label.control-label {{ form.old_password.label_tag }}
						| {{ form.old_password.errors }}
					.input-group.input-group-lg.width-full
						span.input-group-addon
							i.fa.fa-lock
						| {{ form.new_password1 }}
						label.control-label {{ form.new_password1.label_tag }}
						| {% if form.new_password1.help_text %}
						.help {{ form.new_password1.help_text|safe }}
						| {% endif %}
						| {{ form.new_password1.errors }}
					.input-group.input-group-lg.width-full
						span.input-group-addon
							i.fa.fa-lock
						| {{ form.new_password2 }}
						label.control-label {{ form.new_password2.label_tag }}
						| {% if form.new_password2.help_text %}
						.help {{ form.new_password2.help_text|safe }}
						| {% endif %}
						| {{ form.new_password2.errors }}
					.clearfix.margin-top-2

					hr
					.form-group
						button.btn.btn-default.btn-squishy.width-full(type='submit')
							i.fa.fa-check
							| Update Profile
						a.btn.btn-squishy(href="{% url 'bid_main:index' %}")
							i.fa.fa-times
							| Cancel
| {% endblock %}
